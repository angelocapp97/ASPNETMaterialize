@{
    ViewBag.Title = "Contacts";
}

<div class="row container">

    <h2 class="header">@ViewBag.Title</h2>

    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

    <address>
        <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>

    <div class="row container-fluid">
        <div class="col s12">
            <img class="materialboxed" width="300" src="~/Content/Images/sample-1.jpg">
        </div>
    </div>

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large waves-effect waves-light red accent-2">
            <i class="large material-icons">mode_edit</i>
        </a>
        <ul>
            <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
            <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
            <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
            <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
        </ul>
    </div>
</div>

@section scripts  {
    <script>
        $(function () {
            var materialboxed = document.querySelector('.materialboxed');
            var instance = M.Materialbox.init(materialboxed);

            $(document).ready(function () {
                $('.materialboxed').materialbox();
            });
        });
    </script>
}